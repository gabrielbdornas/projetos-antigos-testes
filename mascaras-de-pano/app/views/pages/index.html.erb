
<%= @row %>

<div class="container">
  <h3>Import Balances</h3>
  <%= form_tag import_balancetes_path, multipart: true do %>
    <%= file_field_tag :file %>
    <%= submit_tag "Upload Balances" %>
  <% end %>

  <div class="container">
    <table class="table table-striped">
      <thead class="thead-dark">
        <tr>
          <th scope="col">Conta</th>
          <th scope="col">Reduzido</th>
          <th scope="col">Descrição</th>
          <th scope="col">Anterior</th>
          <th scope="col">Débitos</th>
          <th scope="col">Créditos</th>
          <th scope="col">Movimento</th>
          <th scope="col">Saldo Atual</th>
        </tr>
      </thead>
      <tbody>
        <% if @balancetes.empty? %>
         <tr>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
          </tr>
        <% else %>
          <% @balancetes.each do |row| %>
            <tr>
              <td scope="row"><%= row.cd_financial_account_company %></td>
              <td><%= row.cd_financial_account_company_reduction %></td>
              <td><%= row.financial_account_description %></td>
              <td><%= row.anterior %></td>
              <td><%= row.debt %></td>
              <td><%= row.credit %></td>
              <td><%= row.moviment %></td>
              <td><%= row.current_balance %></td>
          </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
