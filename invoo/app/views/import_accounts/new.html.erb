<%= render 'file_upload' %>

<div class="wrapper wrapper-content animated fadeIn">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox ">
        <div class="ibox-title">
          <h5>Balancetes Importados</h5>
        </div>
        <div class="ibox-content">
          <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover dataTables-example" >
              <thead>
              <tr>
                  <th class='text-center'>Empresa</th>
                  <th class='text-center'>CNPJ</th>
                  <th class='text-center'>Usuário Responsável</th>
                  <th class='text-center'>Data Início</th>
                  <th class='text-center'>Data Fim</th>
                  <th class='text-center'>Data Importação</th>
              </tr>
              </thead>
              <tbody>
                <% @import_infos.each do |import_info| %>
                  <tr class="gradeX">
                    <td> <%= import_info.company_user.company.company_name %> </td>
                    <td> <%= import_info.company_user.company.cnpj %> </td>
                    <td class='text-center'> <%= import_info.company_user.user.email %> </td>
                    <td class='text-center'> <%= (import_info.start_date).strftime('%d/%m/%y') %> </td>
                    <td class='text-center'> <%= (import_info.end_date).strftime('%d/%m/%y') %> </td>
                    <td class='text-center'> <%= (import_info.created_at).strftime('%d/%m/%y') %> </td>
                  </tr>
                <% end %>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
