<div class="col-lg-6">
  <div class="ibox ">
    <div class="ibox-title">
        <h5>Dados da Empresa</h5>
        <div class="ibox-tools">
            <a class="collapse-link">
                <i class="fa fa-chevron-up"></i>
            </a>
            <!-- <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                <i class="fa fa-wrench"></i>
            </a>
            <ul class="dropdown-menu dropdown-user">
                <li><a href="#" class="dropdown-item">Config option 1</a>
                </li>
                <li><a href="#" class="dropdown-item">Config option 2</a>
                </li>
            </ul> -->
            <a class="close-link">
                <i class="fa fa-times"></i>
            </a>
        </div>
      </div>
    <div class="ibox-content">
      <p>Cadastre a empresa no banco de dados.</p>
      <%= simple_form_for @company do |f| %>
        <div class="form-group row">
          <div class="col-lg-10">
            <%= f.input :company_name, input_html: { class: 'form-control width-total' }, label: 'Nome' %>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-lg-10">
            <%= f.input :company_email, input_html: { class: 'form-control width-total' }, label: 'E-mail contato da empresa'  %>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-lg-10">
            <%= f.input :cnpj, placeholder: '12.345.678/0001-90', input_html: { class: 'form-control width-total' }, label: 'C.N.P.J.' %>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-lg-10">
            <%= f.input :address , input_html: { class: 'form-control width-total' }, label: 'Endereço' %>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-lg-10">
            <%= f.input :number,  input_html: { class: 'form-control width-total' }, label: 'Número' %>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-lg-10">
            <%= f.input :complement, input_html: { class: 'form-control width-total' }, label: 'Complemento' %>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-lg-10">
            <%= f.input :district, input_html: { class: 'form-control width-total' }, label: 'Bairro'  %>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-lg-10">
            <%= f.input :zipcode, input_html: { class: 'form-control width-total' }, label: 'Cep' %>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-lg-10">
            <%= f.input :state , placeholder: 'MG', input_html: { class: 'form-control width-total' }, label: 'Estado' %>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-lg-10">
            <%= f.input :city , placeholder: 'Belo Horizonte', input_html: { class: 'form-control width-total' }, label: 'Cidade'  %>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-lg-10">
            <%= f.input :report_system, collection: ['RM'], input_html: { class: 'form-control width-total' }, label: 'Sistema' %>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-lg-offset-6 col-lg-10">
            <%= f.button :submit, 'Salvar', class: 'btn btn-w-m btn-primary' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
