<div class="middle-box text-center loginscreen   animated fadeInDown">
  <div>
    <%= image_tag "InvoO-logo.png", class: "logo-name", style: "width: 200px"%>
          <h1 class="logo-name"></h1>
            <h3>Bem vindo a InvoO</h3>
  </div>
    <h3>Registar</h3>
    <p>Crie sua conta e teste nossos produtos!</p>

    <div class="form-group m-t role:form">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: "Email" %>
        </div>

        <div class="form-group">
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> caracteres no mínimo)</em><% end %><br />

          <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', placeholder: "Senha" %>
        </div>

        <div class="form-group">

          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder: "Confirme sua senha" %>
        </div>

        <div class="actions">
          <%= f.submit "Cadastrar", class: 'btn btn-primary block full-width m-b' %>
        </div>
      <% end %>

            <p class="text-muted text-center"><small>Já possui uma conta?</small></p>
            <%= render "devise/shared/links" %>

      </form>
        <p class="m-t"> <small></small> </p>
</div>

</div>
