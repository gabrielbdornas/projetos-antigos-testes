<div class="row wrapper border-bottom white-bg page-heading">
 <div class="col-lg-10">
    <h2>Relatório de Exceções</h2>
    <ol class="breadcrumb">
      <li class="breadcrumb-item">
        <i> <%= link_to 'Cadastro', new_company_path %> </i>
      </li>
      <li class="breadcrumb-item">
        <i><%= link_to 'Importação', new_company_import_account_path(session[:current_company_id]) %></i>
      </li>
      <li class="breadcrumb-item">
        <i> <%= link_to 'De - Para', company_from_to_index_path(session[:current_company_id]) %> </i>
      </li>
      <li class="breadcrumb-item active">
        <strong>Exceções</strong>
      </li>
    </ol>
    <div class="mt-3">
      <p><em><strong>Mês:</strong> Dezembro</br>
      <strong>Ano:</strong> 2019</br>
    </div>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox ">
        <div class="ibox-title">
            <h5>Tabela Exceções</h5>
            <div class="ibox-tools">
                <a class="collapse-link">
                    <i class="fa fa-chevron-up"></i>
                </a>
                <!-- <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                    <i class="fa fa-wrench"></i>
                </a>
                <ul class="dropdown-menu dropdown-user">
                    <li><a href="#" class="dropdown-item">Config option 1</a>
                    </li>
                    <li><a href="#" class="dropdown-item">Config option 2</a>
                    </li>
                </ul> -->
                <a class="close-link">
                    <i class="fa fa-times"></i>
                </a>
            </div>
        </div>
        <div class="ibox-content">
          <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover dataTables-example" >
              <thead>
                <tr>
                  <th colspan="1" class="text-center">Regra</th>
                  <th colspan="10" class="text-center">Descrição</th>
                  <th colspan="1" class="text-center">Output</th>
                  <th colspan="1" class="text-center">Status</th>
                  <th colspan="1" class="text-center">Ação</th>
                </tr>
              </thead>
              <tbody>
                <% @rules.each do |rule| %>
                  <tr class="gradeX">

                    <th class="text-center" colspan="1"> <%= rule[:number] %> </th>
                    <td colspan="10"> <%= rule[:description] %> </td>
                    <td colspan="1">  </td>
                    <td colspan="1"> <%= rule[:status] %>
                    <!-- <i class="fa fa-circle-o"></i> -->
                      <i class="fa fa-check-circle-o"></i>
                     <!-- <i class="fa fa-exclamation-circle"></i> -->
                    </td>
                    <td colspan="1"> <%= link_to 'Alterar', edit_company_import_accounts_path(params[:company_id]) %> </td>
                  </tr>

                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
