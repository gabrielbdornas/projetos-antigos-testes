<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-12  col-lg-8 m-3">
      <div class="d-flex justify-content-center">
        <h2>Esqueceu sua senha?</h2>
      </div>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
  </div>

  <div class="d-flex justify-content-between">
    <div class="form-actions">
      <%= f.button :submit, "Enviar instruções de renovação de senha", :class => "btn btn-primary my-1"%>
    </div>
    <div>
      <%= link_to "Entrar", new_session_path(resource_name), :class => "btn btn-primary"%>
    </div>
  </div>
  <%= link_to "Criar Cadastro", new_registration_path(resource_name) %>
<% end %>
