<div class="container">
    <h4 class="text-uppercase font-weight-light text-center mt-5">Entre em Contato</h4>

    <div class="row">
        <div class="col-12">
            <form>
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="email" class="form-control" id="name" placeholder="Digite seu nome">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Email</label>
                    <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Digite seu email">
                </div>
                <div class="form-group">
                    <label for="textArea">Mensagem</label>
                    <textarea name="message" id="textArea" class="form-control" cols="30" rows="10" placeholder="Pode falar!"></textarea>
                </div>

                <button type="submit" class="btn btn-success">Enviar</button>
            </form>
        </div>
    </div>
</div>
